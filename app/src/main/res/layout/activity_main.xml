                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Humayun Ahmed Books"
                android:textColor="#791F02"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button26"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/jibonbut"
                android:onClick="but26"
                android:text="হিমু টা কে ?" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/jibonbut"
                android:onClick="but1"
                android:text="১। ময়ূরাক্ষী - হুমায়ূন আহমেদ ১৯৯০" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
